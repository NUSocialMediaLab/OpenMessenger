<Window x:Class="TestApp.TestWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Graph="clr-namespace:Graph;assembly=Graph"
    Title="TestWindow" Height="600" Width="1000" Loaded="Window_Loaded" KeyDown="Window_KeyDown">
    <DockPanel LastChildFill="True" Name="dpContainer">
        <Graph:GraphCanvas Name="graphCanvas"
                           Height="{Binding Path=ActualHeight, ElementName=dpContainer}" 
                           Width="{Binding Path=ActualWidth, ElementName=dpContainer}" >
        </Graph:GraphCanvas>
    </DockPanel>
</Window>
